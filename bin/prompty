#!/usr/bin/env python
# vim:set softtabstop=4 shiftwidth=4 tabstop=4 expandtab:
import datetime
START = datetime.datetime.now()

# Import external modules
import sys
import os
import getopt

# Add base directory to path so that it can find the prompty package
sys.path[0:0] = [os.path.join(os.path.dirname(__file__), "..")]

import prompty


USAGE = "Usage: %s [options]" % sys.argv[0] + """
Options:     -h, --help      Display this help message and exit
"""

def usage(msg=''):
    """Print usage information to stderr.

    @param msg: An optional message that will be displayed before the usage
    @return: None
    """
    if msg:
        print >> sys.stderr, msg
    print >> sys.stderr, USAGE



def main(argv=None):
    """Main function. This is the entry point for the program and is run when
    the script is executed stand-alone (i.e. not included as a module

    @param argv: A list of argumets that can over-rule the command line arguments.
    @return: Error status
    @rtype: int
    """

    # Use the command line (system) arguments if none were passed to main
    if argv is None:
        argv = sys.argv


    # Parse command line options
    try:
        opts, args = getopt.getopt(argv[1:], "hbcdpw:", ["help", "bash", "colours", "debug", "palette", "working-dir="])
    except getopt.error, msg:
        usage(msg)
        return 1

    # Defaults
    debug = False
    workingDir = None

    # Act upon options
    for option, arg in opts:
        if option in ("-h","--help"):
            usage()
            return 0

        if option in ("-b", "--bash"):
            print "export PS1=\"\\$(%s \\$?)\"" % sys.argv[0]
            return 0

        if option in ("-c", "--colours"):
            for style in prompty.colours.STYLES:
                for colour in prompty.colours.COLOURS:
                    print "%s%s : %s%s" % (prompty.colours.startColour(None, colour, style=style, wrap=False), 
                                           style[prompty.colours.NAME_KEY], 
                                           colour[prompty.colours.NAME_KEY], 
                                           prompty.colours.stopColour(None, wrap=False))
            return 0

        if option in ("-d", "--debug"):
            debug = True

        if option in ("-p", "--palette"):
            for colour in prompty.colours.PALETTE:
                print "%s%s%s" % (prompty.colours.startColour(
                                                    None,
                                                    fgcolour=colour[prompty.colours.FG_KEY],
                                                    bgcolour=colour[prompty.colours.BG_KEY],
                                                    style=colour[prompty.colours.STYLE_KEY],
                                                    wrap=False),
                                       colour[prompty.colours.NAME_KEY],
                                       prompty.colours.stopColour(None, wrap=False))
            return 0

        if option in ("-w", "--working-dir"):
            workingDir = arg

    if len(args) < 1:
        usage("Not enough arguments")
        return 1

    exitStatus = int(args[0])

    s = prompty.status.Status(exitStatus, workingDir)

    p = prompty.prompt.Prompt(s)

    # Encode unicode to UTF-8 for terminal printing
    prompt = p.getPrompt().encode("utf8")

    if debug:
        elapsed = datetime.datetime.now() - START
        sys.stdout.write("%d\n"% (elapsed.total_seconds()*1000))

    sys.stdout.write(prompt)

    return exitStatus




#---------------------------------------------------------------------------#
#                          End of functions                                 #
#---------------------------------------------------------------------------#
# Run main if this file is not imported as a module
if __name__ == "__main__":
    sys.exit(main())
